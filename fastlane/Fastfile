lane :ios_production do
    build_ios()
    build_xcode()
    upload_ipa()
#    set_changelog(
#        app_identifier: ENV["IOS_PACKAGE_NAME"],
#        username: ENV["FASTLANE_NAME"],
#        team_name: ENV["IOS_TEAM_NAME"], 
#        changelog: get_changelog_text()
